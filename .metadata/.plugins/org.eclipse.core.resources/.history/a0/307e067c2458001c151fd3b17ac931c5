  	<insert id="insertFreeAndNanumBoard">
  		INSERT INTO board(board_seq, board_type, user_id, title, content, regDate) VALUES(
  				(SELECT IFNULL(MAX(BOARD_SEQ), 0) + 1 FROM BOARD A WHERE BOARD_TYPE = #{boardType}),
  				#{boardType},
  				#{userId},
  				#{title},
  				#{content},
  				NOW()
  		)
  	</insert>
  	

